  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:next": "next dev -p 3002 --turbopack",
    "dev": "run-p dev:*",
    "build:next": "next build",
    "build": "run-p build:* --race",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "check:i18n": "i18n-check -l src/locales -s en -u src -f next-intl",
    "check:atoms": "node scripts/check-atom-margins.mjs",
    "commit": "commit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build",
    "prettier": "prettier --check ."
  },
